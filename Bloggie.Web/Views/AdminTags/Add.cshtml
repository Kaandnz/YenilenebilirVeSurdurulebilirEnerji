@model Bloggie.Web.Models.ViewModels.AddTagRequest
@{
}


<div class=" pt-4">
    <div class="container">
        <h1>@Resource.AddNewTag </h1>
    </div>
</div>

<div class="container pb-5 pt-3">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">@Resource.TagName</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">@Resource.TagDisplayName</label>
            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" required />
            <span class="text-danger" asp-validation-for="DisplayName"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">@Resource.Save</button>
        </div>
    </form>
</div>